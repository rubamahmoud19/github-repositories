<%= form_tag(request.path, method: 'get', class: "w3-container") do %>
  <div class="w3-row w3-section">
    <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-search"></i></div>
    <div class="w3-rest">
      <%= text_field_tag(:search, params[:search], class: "w3-input w3-border") %>
    </div>
  </div>
  <%= submit_tag("Search", class:"w3-button w3-block w3-section w3-blue w3-ripple w3-padding") %>
<% end %>
